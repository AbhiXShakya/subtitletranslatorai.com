        pageLanguage: 'auto',
        // includedLanguages: 'en,es,fr,de,it,pt,ru,ja,ko,zh-CN',
        layout: google.translate.TranslateElement.InlineLayout.SELECT,
        autoDisplay: false,
        gaTrack: false
