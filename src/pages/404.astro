---
title: "404 Not Found"
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const pageTitle = "404 Not Found";
---

<Layout title={pageTitle} noindex={true}>
  <Header />
  <section
    style="
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 75vh;
      border-radius: 1.5rem;
      padding: 2.5rem 1.5rem;
      margin: 2rem 0;
    "
  >
    <div
      style="
        background: rgba(255,255,255,0.8);
        border-radius: 50%;
        width: 120px;
        height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 24px 0 rgba(31, 38, 135, 0.10);
        margin-bottom: 1.5rem;
      "
    >
      <h1 style="font-size: 4.5rem; font-weight: 800; color: #0070f3; margin: 0;">404</h1>
    </div>
    <p style="font-size: 1.5rem; margin-bottom: 2rem; color: #222; text-align: center; max-width: 420px;">
      Sorry, the page you are looking for does not exist.<br/>
      It might have been moved or deleted.
    </p>
    <a
      href="/"
      style="
        background: #0070f3;
        color: #fff;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.15rem;
        padding: 0.75rem 2.25rem;
        border-radius: 2rem;
        box-shadow: 0 2px 8px 0 rgba(0,112,243,0.10);
        transition: background 0.2s;
        letter-spacing: 0.03em;
      "
      onmouseover="this.style.background='#005bb5'"
      onmouseout="this.style.background='#0070f3'"
    >
      Go back home
    </a>
  </section>
  <Footer />
</Layout>